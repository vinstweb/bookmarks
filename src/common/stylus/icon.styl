@import "variables"

@font-face
  font-family 'bm-icon'
  src url(icomoon-font-path + '/bm-icon.eot?qvpa50')
  src url(icomoon-font-path + '/bm-icon.eot?qvpa50#iefix') format('embedded-opentype'), url(icomoon-font-path + '/bm-icon.ttf?qvpa50') format('truetype'), url(icomoon-font-path + '/bm-icon.woff?qvpa50') format('woff'), url(icomoon-font-path + '/bm-icon.svg?qvpa50#bm-icon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'bm-icon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-code-light
  &:before
    content icon-code-light
.icon-code-strong
  &:before
    content icon-code-strong
.icon-design
  &:before
    content icon-design  
    color #5b5c5c

